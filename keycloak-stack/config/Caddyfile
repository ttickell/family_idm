# Redirect HTTP to HTTPS for all domains
http://id.tickell.us {
    redir https://id.tickell.us{uri} permanent
}
http://vaultwarden.tickell.us {
    redir https://vaultwarden.tickell.us{uri} permanent
}
http://mdm.id.tickell.us {
    redir https://mdm.id.tickell.us{uri} permanent
}
http://scep.id.tickell.us {
    redir https://scep.id.tickell.us{uri} permanent
}
# Vaultwarden dedicated subdomain
vaultwarden.tickell.us {
    tls /etc/ssl/certs/id.tickell.us.crt /etc/ssl/private/id.tickell.us.key
    reverse_proxy vaultwarden:8082 {
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }
    # Remove X-Frame-Options for SSO/2FA callback endpoints
    @noFrameOptions {
        path /sso/* /identity/connector/callback* /2fa/*
    }
    header @noFrameOptions {
        -X-Frame-Options
    }
    header {
        X-Frame-Options SAMEORIGIN
        X-Content-Type-Options nosniff
        Referrer-Policy strict-origin-when-cross-origin
        X-XSS-Protection "1; mode=block"
    }
    log {
        output file /data/logs/vaultwarden-access.log
        format json {
            time_format "2006-01-02T15:04:05Z07:00"
            message_key "msg"
        }
        level INFO
    }
    respond /health 200
}
# Main Keycloak service (behind Cloudflare WAF)
id.tickell.us {
    # Use internal CA certificate
    tls /etc/ssl/certs/id.tickell.us.crt /etc/ssl/private/id.tickell.us.key

    reverse_proxy keycloak-main:8080 {
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }

    # Security headers for web interface
    header {
        X-Frame-Options SAMEORIGIN
        X-Content-Type-Options nosniff
        Referrer-Policy strict-origin-when-cross-origin
        X-XSS-Protection "1; mode=block"
    }

    # Logging for troubleshooting
    log {
        output file /data/logs/access.log
        format json {
            time_format "2006-01-02T15:04:05Z07:00"
            message_key "msg"
        }
        level INFO
    }

    # Health check endpoint
    respond /health 200
}

# MDM endpoint (direct access, bypasses Cloudflare WAF)
mdm.id.tickell.us {
    # Use same wildcard certificate
    tls /etc/ssl/certs/id.tickell.us.crt /etc/ssl/private/id.tickell.us.key
    
    reverse_proxy keycloak-main:8080 {
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }
    
    # Minimal security headers for MDM compatibility
    header {
        X-Content-Type-Options nosniff
    }
    
    # Separate logging for MDM traffic
    log {
        output file /data/logs/mdm.log
        format json {
            time_format "2006-01-02T15:04:05Z07:00"
            message_key "msg"
        }
        level INFO
    }
    
    # Health check for MDM endpoint
    respond /mdm/health 200
}

# SCEP/API endpoint (direct access, bypasses Cloudflare WAF)
scep.id.tickell.us {
    # Use same wildcard certificate
    tls /etc/ssl/certs/id.tickell.us.crt /etc/ssl/private/id.tickell.us.key
    
    reverse_proxy keycloak-main:8080 {
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }
    
    # Minimal security headers for API compatibility
    header {
        X-Content-Type-Options nosniff
    }
    
    # Separate logging for SCEP/API traffic
    log {
        output file /data/logs/scep-api.log
        format json {
            time_format "2006-01-02T15:04:05Z07:00"
            message_key "msg"
        }
        level INFO
    }
    
    # Health check for SCEP endpoint
    respond /scep/health 200
}